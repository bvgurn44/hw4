<h1><%= @place["name"] %></h1>
<% if @current_user %>
     <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-primary btn-lg shadow p-3 mb-5 rounded">New Post</a>
  <h2>My Posts</h2>
  <div class="row">
  <% for post in @posts %>
  <div class= "col-md-4 col-sm-6">
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
     <% if post.image.attached? %>
        <img src="<%= url_for(post.image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
      <% end %>
   
    <p><%= post["description"] %></p>
    </div>
  <% end %>
  </div>


<% else %>
<p>You must be logged in to read posts </p>
<%end%>

<p>
  <a href="/places">Back to All Places</a>
</p>